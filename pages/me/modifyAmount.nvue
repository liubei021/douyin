.draw-item-box {
	display: flex;
	flex-direction: column;
	flex-direction: row;
	justify-content: space-between;
	padding: 30rpx;
	margin-top: 10rpx;
}

.draw-item-middle {
	display: flex;
	flex-direction: column;
	margin-left: 30rpx;
	padding-top: 20rpx;
}
.draw-exchange {
	color: #FFFFFF;
	font-size: 13px;
	font-weight: 600;
}

.create-time {
	color: #FFFFFF;
	font-size: 13px;
